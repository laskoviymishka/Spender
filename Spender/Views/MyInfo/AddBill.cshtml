<div class="modal-header">
    <h3 class="modal-title">Add new bill</h3>
</div>
<div class="modal-body">
    <form role="form" class="row">
        <div class="form-group">
            <div class="label label-primary">Name</div>
            <input class="form-control" type="text" ng-model="model.Name">
        </div>
        <div class="form-group">
            <div class="label label-primary">Note</div>
            <textarea class="form-control" ng-model="model.Note"></textarea>
        </div>
        <div class="form-group">
            <div class="label label-primary">Amount</div>
            <input class="form-control" ng-model="model.Amount" type="number" />
        </div>
        <div class="form-group">
            <div class="label label-primary">Reccuring</div>
            <select class="form-control" ng-model="model.Reccuring"
                    ng-options="type.id as type.name for type in reccuring"
                    style="width:100%"></select>
        </div>
        <div class="form-group">
            <div class="label label-primary">Deadline</div>
            <input class="form-control" ng-model="model.Deadline" type="date" />
        </div>
        <div class="form-group">
            <div class="label label-primary">Category</div>
            <select class="form-control" ng-model="model.CategoryId"
                    ng-options="type.Id as type.Name for type in categories"
                    style="width:100%"></select>
        </div>
        <div class="form-group">
            <div class="label label-primary">Image</div>
            <input class="form-control" type="file" ng-file-select="onFileSelect($files)" />
        </div>
    </form>
</div>
<div class="modal-footer">
    <button class="btn btn-primary" ng-click="save()">Save bill</button>
    <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
</div>
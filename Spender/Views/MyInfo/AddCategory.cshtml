<div class="modal-header">
    <h3 class="modal-title">Add new category</h3>
</div>
<div class="modal-body">
    <form role="form">
        <div class="form-group">
            <div class="label label-primary">Name</div>
            <input class="form-control" type="text" ng-model="model.Name">
        </div>
        <div class="form-group">
            <div class="label label-primary">Type</div>
            <select class="form-control" ng-model="model.Type"
                    ng-options="type.Id as type.Name for type in types"
                    style="width: 100%"></select>
        </div>
        <div class="form-group">
            <div class="label label-primary">Image</div>
            <input class="form-control" type="file" ng-file-select="onFileSelect($files)" />
        </div>
    </form>
</div>
<div class="modal-footer">
    <button class="btn btn-primary" ng-click="save()">Save category</button>
    <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
</div>